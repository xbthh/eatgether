<div class="col-md-12">
    <%= link_to("约饭", new_post_path(@post), class: "btn btn-danger pull-right") %>
</div>
<br>

<table class="table table-boldered">
    <thead>
        <tr>
            <th>约饭主题</th>
            <th>约饭内容</th>
            <th>控制面板</th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= link_to(post.title,post_path(post)) %></td>
            <td><%= post.description %></td>
            <td>
                <%= link_to("修改", edit_post_path(post), class: "btn btn-default") %>
                <%=link_to("删除", post_path(post), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" })%></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
